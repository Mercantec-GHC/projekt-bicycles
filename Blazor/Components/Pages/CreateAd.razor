@page "/create-ad"
@inject BikeService BikeService
@using Blazor.Models
@using Blazor.Services
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@using Microsoft.AspNetCore.Components.Authorization
@rendermode InteractiveServer

<div class="create-ad-container">
    <h3>Create Bike Ad</h3>

    @if (!string.IsNullOrEmpty(errorMessage)) //Checks if there is an error message.
    {
        <div class="alert alert-danger">@errorMessage</div> //Displays the error message in a styled alert box.
    }

    @if (!string.IsNullOrEmpty(successMessage)) //Checks if there is a success message.
    {
        <div class="alert alert-success">@successMessage</div> 
    }

    @*Creates a from bound to the bike object *@
    <EditForm Model="@bike" OnValidSubmit="HandleValidSubmit">
        @*And calls HandleValidSubmit() when the form is valid.*@
        <DataAnnotationsValidator /> @*Enables automatic validation (based on attributes in the Bike model, like [Required]).*@
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Title:</label> 
            <InputText @bind-Value="bike.Title" class="form-control" /> @*Text input bound to bike.Title.*@
        </div>

        <div class="mb-3">
            <label class="form-label">Price:</label>
            <InputNumber @bind-Value="bike.Price" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Brand:</label>
            <InputText @bind-Value="bike.Brand" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Type:</label>
            <InputText @bind-Value="bike.Type" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Color:</label>
            <InputText @bind-Value="bike.Color" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Model Year:</label>
            <InputNumber @bind-Value="bike.ModelYear" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Condition:</label>
            <InputText @bind-Value="bike.BikeCondition" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Location:</label>
            <InputText @bind-Value="bike.Location" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Description:</label>
            <InputTextArea @bind-Value="bike.Description" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Image:</label>
            <InputFile OnChange="HandleFileSelected" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Create Ad</button>
    </EditForm>
</div>

@code {
    private string? errorMessage;
    private string? successMessage;
    private Bike bike = new Bike(); //Instance of Bike model to bind form inputs to.
    private IBrowserFile? imageFile; //Stores the uploaded image file.

    private async Task HandleFileSelected(InputFileChangeEventArgs e) //This method is called when user selects a file.
    {
        imageFile = e.File; //Stores the selected file in imageFile variable.
    }

    private async Task HandleValidSubmit() //This method is called when the form is valid and submitted.
    {
        try
        {
            errorMessage = null; //Clear previous error message.
            successMessage = null;//Clear previous success message.

            // Get logged-in user
            var authState = await AuthStateProvider.GetAuthenticationStateAsync(); //Get information about the current logged-in user.
            var user = authState.User; //Extrcacts the user object.

            // GGets the UserId claim that was created when the user logged in.
            var userIdClaim = user.FindFirst("UserId")?.Value;  //claim is a piece of data about the user. for example, their ID, email, or roles.
                                                                //value is the actual data stored in the claim.
            // Validate claim
            if (string.IsNullOrEmpty(userIdClaim) || !int.TryParse(userIdClaim, out int userId)) //Checks if the UserId claim is missing or invalid. or cannot be converted to an integer.
            {
                errorMessage = "Cannot determine your user ID. Please log in again."; //Sets an error message if the claim is invalid.
                return; //stops the method.
            }

            // Verify that this user exists in the database
            var dbUserExists = await BikeService.CheckUserExistsAsync(userId); //Calls a method in BikeService to check if a user with the given userId exists in the database.
            if (!dbUserExists) //If the user does not exist in the database.
            {
                errorMessage = "Logged-in user does not exist in the system.";
                return;
            }

            // Assign the current user's ID to the bike
            bike.UserId = userId; //links user and bikkes by setting the UserId property of the bike object to the logged-in user's ID.

            // Create the bike ad in the database
            await BikeService.CreateAdAsync(bike, imageFile); //Calls a method in BikeService to create the bike ad in the database, passing in the bike object and the uploaded image file.

            // Show success message
            successMessage = "Ad created successfully!";

            // Reset form
            bike = new Bike(); //Resets the bike object to a new instance, clearing the form inputs.
            imageFile = null;

            
        }
        catch (Exception ex) //Catches any exceptions that occur during the ad creation process.
        {
            errorMessage = "Failed to create ad: " + ex.Message;
        }
    }
}