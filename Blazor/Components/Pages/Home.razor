@page "/"
@using Blazor.Models
@using Blazor.Services
@inject BikeService BikeService
@rendermode InteractiveServer

<header class="hero-section">
    <video autoplay loop muted playsinline class="hero-video">
        <source src="videos/bikeshop.mp4" type="video/mp4">
    </video>

    <div class="hero-overlay"></div>

    <div class="hero-content">
        <h1>Welcome</h1>
        <p>Discover bikes for every ride</p>
    </div>
</header>
 
<section class="new-products">
    <h2>Newest Products</h2>
</section>

<div class="bikes-container">
    @foreach (var bike in NewestBikes)
    {
        <div class="bike-card">
            <img src="@bike.ImageUrl" alt="@bike.Title" class="bike-image" />
            <div class="bike-info">
                <h4>@bike.Title</h4>
                <p>Price: @bike.Price kr</p>
                <p>Brand: @bike.Brand</p>
                <p>Type: @bike.Type</p>
                <p>Condition: @bike.BikeCondition</p>
                <p>Location: @bike.Location</p>
            </div>
        </div>
    }
</div>

@code {
    private List<Bike> NewestBikes = new List<Bike>();

    protected override void OnInitialized()
    {
        NewestBikes = BikeService.GetNewestBikes();
    }
}

