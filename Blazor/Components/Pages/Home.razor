@page "/"
@using Blazor.Models
@using Blazor.Services
@inject BikeService BikeService

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>
<p>Welcome to your new app.</p>

<h3>Newest Bikes</h3>

<div class="bikes-container">
    @foreach (var bike in NewestBikes)
    {
        <div class="bike-card">
            <img src="@bike.ImageUrl" alt="@bike.Title" class="bike-image" />
            <div class="bike-info">
                <h4>@bike.Title</h4>
                <p>Price: @bike.Price kr</p>
                <p>Brand: @bike.Brand</p>
                <p>Type: @bike.Type</p>
                <p>Condition: @bike.BikeCondition</p>
                <p>Location: @bike.Location</p>
            </div>
        </div>
    }
</div>

@code {
    private List<Bike> NewestBikes = new();

    protected override void OnInitialized()
    {
        NewestBikes = BikeService.GetNewestBikes();
    }
}
<style>
    .bikes-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .bike-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .bike-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .bike-image {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .bike-info {
        padding: 10px;
    }

        .bike-info h4 {
            margin: 0 0 5px 0;
        }

        .bike-info p {
            margin: 2px 0;
            font-size: 0.9rem;
            color: #555;
        }
</style>