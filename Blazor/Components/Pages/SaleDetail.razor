@page "/saledetail/{id:int}"
@using Blazor.Models
@using Blazor.Services
@rendermode InteractiveServer
@inject BikeService BikeService


<h3>Bike Details</h3>

@if (bike == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card" style="max-width:500px;">
        <div class="card-body">
        <h4>@bike.Title</h4>
        <p><strong>Brand:</strong> @bike.Brand</p>
        <p><strong>Price:</strong> @bike.Price.ToString("C")</p>
        <p><strong>Description:</strong> @bike.Description</p>
        </div>
        <!-- Add more details as needed -->
    </div>
}

@code {
    [Parameter] 
    public int id { get; set; }
    private Bike? bike;

    protected override async Task OnInitializedAsync()
    {
        bike = await BikeService.GetBikeById(id);   
    }
}

