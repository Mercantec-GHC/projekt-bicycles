@page "/saledetail/{id:int}"
@using Blazor.Models
@using Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject BikeService BikeService
@inject MessageService MessageService
@inject SimpleDbAuthProvider Auth

<h3>Bike Details</h3>

@if (bike == null)
{
    <p>Loading...</p>
}
else
{
    <div class="container mt-5">

        <h2 class="text-center mb-4">@bike.Title</h2>

        <div class="row align-items-start">
            <div class="col-md-6 text-center">
                <img src="@currentImage" class="main-image img-fluid" alt="@bike.Title" />
                @if (imageList.Count > 1)
                {
                    <div class="thumbnail-row mt-3">
                        @foreach (var img in imageList)
                        {
                            <img src="@img"
                                 class="thumbnail @(img == currentImage ? "selected border border-primary" : "")"
                                 @onclick="() => SelectImage(img)"
                                 style="width:60px; cursor:pointer; margin-right:5px;" />
                        }
                    </div>
                }
            </div>

            <div class="col-md-6">
                <div class="info-box p-4 border rounded">
                    <h3>@bike.Price.ToString("C")</h3>
                    <p><strong>Brand:</strong> @bike.Brand</p>
                    <p><strong>Condition:</strong> @bike.BikeCondition</p>
                    <p><strong>Location:</strong> @bike.Location</p>
                    <p><strong>Seller:</strong> @bike.User?.Name</p>

                    <AuthorizeView>
                        <Authorized Context="authContext">
                            @{
                                var loggedInUserId = authContext.User.FindFirst("UserId")?.Value;
                                var ownerId = bike.UserId.ToString();
                            }
                            @if (loggedInUserId == ownerId)
                            {
                                <button class="btn btn-primary w-100 mb-2" @onclick="Edit">Edit Ad</button>
                                <button class="btn btn-danger w-100" @onclick="Delete">Delete Ad</button>
                            }
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>

        <div class="desc-section mt-5 p-4 border rounded">
            <h4 class="text-center mb-3">Description</h4>
            <p>@bike.Description</p>
        </div>

        <!-- MESSAGES SECTION -->
        <div class="messages-section mt-5 p-4 border rounded">
            <h4 class="mb-3">Messages</h4>

            @if (messages.Count == 0)
            {
                <p>No messages yet.</p>
            }
            else
            {
                @foreach (var msg in messages)
                {
                    <div class="card mb-2 p-2">
                        <strong>@msg.FromUser?.Name → @msg.ToUser?.Name:</strong> @msg.Content
                        <div class="text-muted" style="font-size:0.8em">@msg.CreatedAt.ToString("dd-MM-yyyy HH:mm")</div>

                        <AuthorizeView>
                            <Authorized>
                                @if (Auth.CurrentUserId != msg.FromUserId)
                                {
                                    <button class="btn btn-outline-primary btn-sm mt-1"
                                            @onclick="() => OpenReplyModal(msg.FromUserId, msg.FromUser?.Name)">
                                        Reply
                                    </button>
                                }
                            </Authorized>
                        </AuthorizeView>
                    </div>
                }
            }

            <!-- WRITE MESSAGE TO OWNER -->
            <AuthorizeView>
                <Authorized>
                    @if (bike.UserId != Auth.CurrentUserId)
                    {
                        <div class="mt-4 p-3 border rounded">
                            <h5>Send message to owner</h5>
                            <textarea class="form-control mb-2" placeholder="Write your message..."
                                      @bind="newMessageToOwner" rows="3"></textarea>
                            <button class="btn btn-success w-100" @onclick="SendMessageToOwner">Send Message</button>
                        </div>
                    }
                </Authorized>
                <NotAuthorized>
                    <p class="text-muted">Login to send messages</p>
                </NotAuthorized>
            </AuthorizeView>

            <!-- REPLY MODAL -->
            @if (showReplyModal)
            {
                <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Reply to @replyToUserName</h5>
                                <button type="button" class="btn-close" @onclick="CloseReplyModal"></button>
                            </div>
                            <div class="modal-body">
                                <textarea class="form-control" @bind="newMessage" rows="3"></textarea>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" @onclick="CloseReplyModal">Cancel</button>
                                <button class="btn btn-primary" @onclick="SendMessageFromModal">Send</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public int id { get; set; }

    private Bike? bike;
    private string currentImage = "";
    private List<string> imageList = new();
    private List<Message> messages = new();

    private string newMessage = "";
    private string newMessageToOwner = "";

    private int replyToUserId;
    private string replyToUserName = "";
    private bool showReplyModal;

    protected override async Task OnInitializedAsync()
    {
        bike = await BikeService.GetBikeById(id);
        if (bike != null)
        {
            if (!string.IsNullOrEmpty(bike.ImageUrl))
            {
                imageList.Add(bike.ImageUrl);
                currentImage = bike.ImageUrl;
            }
            messages = await MessageService.GetMessagesAsync(bike.Id);
        }
    }

    private void SelectImage(string img) => currentImage = img;

    private void OpenReplyModal(int userId, string? userName)
    {
        replyToUserId = userId;
        replyToUserName = userName ?? "";
        newMessage = $"@{replyToUserName}, ";
        showReplyModal = true;
    }

    private void CloseReplyModal()
    {
        showReplyModal = false;
        newMessage = "";
        replyToUserId = 0;
        replyToUserName = "";
    }

    private async Task SendMessageFromModal()
    {
        if (!string.IsNullOrWhiteSpace(newMessage) && bike != null)
        {
            await MessageService.SendMessageAsync(new Message
            {
                BikeId = bike.Id,
                FromUserId = Auth.CurrentUserId,
                ToUserId = replyToUserId,
                Content = newMessage,
                CreatedAt = DateTime.UtcNow
            });

            messages = await MessageService.GetMessagesAsync(bike.Id);
            CloseReplyModal();
        }
    }

    private async Task SendMessageToOwner()
    {
        if (!string.IsNullOrWhiteSpace(newMessageToOwner) && bike != null)
        {
            await MessageService.SendMessageAsync(new Message
            {
                BikeId = bike.Id,
                FromUserId = Auth.CurrentUserId,
                ToUserId = bike.UserId,
                Content = newMessageToOwner,
                CreatedAt = DateTime.UtcNow
            });

            newMessageToOwner = "";
            messages = await MessageService.GetMessagesAsync(bike.Id);
        }
    }

    private void Edit() => Navigation.NavigateTo($"/edit-ad/{bike?.Id}");

    private async Task Delete()
    {
        if (bike != null)
        {
            await BikeService.DeleteAd(bike.Id);
            Navigation.NavigateTo("/");
        }
    }
}
