@page "/saledetail/{id:int}"
@using Blazor.Models
@using Blazor.Services
@rendermode InteractiveServer
@inject BikeService BikeService


<h3>Bike Details</h3>

@if (bike == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card p-3" style="max-width:800px;">
        <div class="row g-3">

            <!-- LEFT SIDE: IMAGE -->
            <div class="col-md-5">
                @if (!string.IsNullOrEmpty(bike.ImageUrl))
                {
                    <img src="@bike.ImageUrl" class="img-fluid rounded" alt="@bike.Title" />
                }
            </div>

            <!-- RIGHT SIDE: INFO -->
            <div class="col-md-7">
                <h4>@bike.Title</h4>
                <p><strong>Brand:</strong> @bike.Brand</p>
                <p><strong>Price:</strong> @bike.Price.ToString("C")</p>
                <p><strong>Condition:</strong> @bike.BikeCondition</p>
                <p><strong>Location:</strong> @bike.Location</p>

                <hr />

                <h5>Description</h5>
                <p>@bike.Description</p>
            </div>

        </div>
    </div>

}

@code {
    [Parameter] 
    public int id { get; set; }
    private Bike? bike;

    protected override async Task OnInitializedAsync()
    {
        bike = await BikeService.GetBikeById(id);   
    }
}

