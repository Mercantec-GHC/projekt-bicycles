@using System.Globalization
@inherits OwningComponentBase
@using Blazor.Services
@using Blazor.Models
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@inject BikeService BikeService

<div class="bikes-container">

    <div class="bike-card">
        <div class="card h-100" @onclick="() => OpenSalesCard(bike.Id)" style="cursor:pointer">
            <!-- Bike image -->
            <img src="@bike.ImageUrl" alt="@bike.Title" class="bike-image" />

            <!-- Bike information -->
            <div class="bike-info">
                <h4>@bike.Title</h4>
                <p>Price: @bike.Price kr</p>
                <p>Brand: @bike.Brand</p>
                <p>Type: @bike.Type</p>
                <p>Condition: @bike.BikeCondition</p>
                <p>Location: @bike.Location</p>
            </div>
        </div>
    </div>
    
</div>
@code {


    [Parameter]
    public Bike bike { get; set; }

    private void OpenSalesCard(int bikeId)
    {
        NavigationManager.NavigateTo($"/saledetail/{bikeId}");
    }

    private string brandFilter = string.Empty;
    private string typeFilter = string.Empty;
    private decimal? maxPriceFilter;
    private int? modelYearFilter;
    private string conditionFilter = string.Empty;
    private string colorFilter = string.Empty;
    private string locationFilter = string.Empty;
}

