@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Blazor.Services
@inject BikeService BikeService
@inject SimpleDbAuthProvider Auth      // Inject custom authentication provider.
@inject NavigationManager Nav          // Inject navigation helper.

<!-- Main navigation bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-success align-items-center">
    <div class="container-fluid">
        <!-- Brand / Home link -->
        <a class="navbar-brand" href="/">ReRide</a>

        <!-- Left-side navigation links -->
        <div class="navbar-nav me-auto">
            <a class="nav-link" href="/bikes">All Bikes</a>

            <!-- Example dropdown menu -->
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Types</a>
                <ul class="dropdown-menu">

                    <!-- Goes through the types from the database -->
                    @if (types == null || types.Count == 0)
                    {
                        <li><span class="dropdown-item-text text-muted">No Types of Bikes</span></li>
                    }
                    else
                    {
                        @foreach (var type in types)
                        {
                            var href = $"/bikes?type={Uri.EscapeDataString(type)}";
                            <li><a class="dropdown-item" href="@href">@type</a></li>
                        }
                    }
                </ul>
            </div>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Brands</a>
                <ul class="dropdown-menu">

                    <!-- Goes through the types from the database -->
                    @if (brands == null || brands.Count == 0)
                    {
                        <li><span class="dropdown-item-text text-muted">No Brands</span></li>
                    }
                    else
                    {
                        @foreach (var brand in brands)
                        {
                            var href = $"/bikes?brand={Uri.EscapeDataString(brand)}";
                            <li><a class="dropdown-item" href="@href">@brand</a></li>
                        }
                    }
                </ul>
            </div>

        </div>

        <!-- Right-side section (auth controls) -->
        <div class="d-flex">
            <AuthorizeView>
                <!-- Shown when user is authenticated -->
                <Authorized Context="authContext">
                    <!-- Display logged-in username -->
                    <span class="navbar-text me-2">Welcome, @authContext.User.Identity?.Name</span>

                    <!-- Link to create a new bike ad -->
                    <NavLink class="btn btn-primary" href="/create-ad">Sell bike</NavLink>

                    <!-- Link to My Account page -->
                    <NavLink class="btn btn-warning" href="/my-account">My Account</NavLink>

                    <!-- Logout button -->
                    <button class="btn btn-danger" @onclick="DoLogout">Logout</button>
                </Authorized>

                <!-- Shown when user is NOT authenticated -->
                <NotAuthorized>
                    <NavLink class="btn btn-primary" href="/login">Login</NavLink>
                    <NavLink class="btn btn-warning" href="/signup">Sign Up</NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

<!-- Main page content -->
<div class="page-content container mt-4">
    @Body
</div>

@code {
    // Handles logout action, clears auth state and redirects home
    private void DoLogout()
    {
        Auth.Logout();       // Clear authentication session
        Nav.NavigateTo("/"); // Redirect to homepage
    }

    private List<string>? types;
    private List<string>? brands;// List to hold distinct bike types

    protected override async Task OnInitializedAsync()
    {
        var data = await BikeService.GetDistinctTypesAndBrandsAsync();
        types = data.Types;
        brands = data.Brands;// Fetch distinct bike types from the database
    }
}


